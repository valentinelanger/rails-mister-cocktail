
    <%= simple_form_for(@cocktail) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs padded-form">
        <%= f.input :name %>
      </div>

      <div class="form-inputs padded-form">
        <%= f.input :image, as: :attachinary %>
      </div>

      <div class="form-actions padded-form">
        <%= f.submit :submit, class: "btn-vale", id: "btn-overriding-bootstrap" %>
      </div>
    <% end %>

