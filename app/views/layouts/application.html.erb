<!DOCTYPE html>
<html>
  <head>
    <title>RailsMisterCocktail</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navbar-cocktails navbar-cocktails-fixed">
      <%= link_to 'Cocktails', cocktails_path, class: 'navbar-cocktails-link' %>
      <%= link_to 'Add a new Cocktail', new_cocktail_path, class: 'btn-vale' %>
    </div>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
